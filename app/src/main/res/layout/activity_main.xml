<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.sohail.myportfolio.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/headTxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/movieBtn"
        android:layout_below="@+id/headTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="#FF4081"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/stockBtn"
        android:layout_below="@+id/movieBtn"
        android:layout_centerHorizontal="true"
        android:background="#FF4081"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/buildBtn"
        android:layout_below="@+id/stockBtn"
        android:layout_alignLeft="@+id/stockBtn"
        android:layout_alignStart="@+id/stockBtn"
        android:background="#FF4081"
        android:layout_marginBottom="10dp"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:id="@+id/myapBtn"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buildBtn"
        android:layout_alignStart="@+id/buildBtn"
        android:background="#FF4081"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/goBtn"
        android:layout_below="@+id/myapBtn"
        android:layout_centerHorizontal="true"
        android:background="#FF4081"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capstone "
        android:id="@+id/capBtn"
        android:layout_below="@+id/goBtn"
        android:layout_alignLeft="@+id/goBtn"
        android:layout_alignStart="@+id/goBtn"
        android:background="#FF4081"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
